{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://open-gov-group.github.io/opengov-privacy-app/portfolio/index.schema.json",
  "title": "OpenGov Privacy â€“ Portfolio Index",
  "type": "object",
  "required": ["version", "items"],
  "properties": {
    "version": { "type": "string" },
    "generated": { "type": "string", "format": "date-time" },
    "items": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["aktenplan_id", "title", "ssp"],
        "properties": {
          "aktenplan_id": { "type": "string" },
          "title": { "type": "string" },
          "description": { "type": "string" },
          "ssp": {
            "type": "object",
            "required": ["href"],
            "properties": {
              "uuid": { "type": "string", "format": "uuid" },
              "href": { "type": "string", "format": "uri" }
            },
            "additionalProperties": false
          },
          "profile": {
            "type": "object",
            "required": ["href"],
            "properties": {
              "href": { "type": "string", "format": "uri" }
            },
            "additionalProperties": false
          },
          "poam": {
            "type": "object",
            "required": ["href"],
            "properties": {
              "href": { "type": "string", "format": "uri" }
            },
            "additionalProperties": false
          },
          "owner_role": { "type": "string" },
          "status": {
            "type": "string",
            "enum": ["draft", "in-review", "released", "retired"]
          },
          "tags": {
            "type": "array",
            "items": { "type": "string" },
            "uniqueItems": true
          }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
