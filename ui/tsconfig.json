{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",

    // Für React 17+ "automatic" JSX transform:
    "jsx": "react-jsx",

    "moduleResolution": "NodeNext",
    "allowJs": true,
    "checkJs": false,            // falls ihr .jsx ohne TS-Typen nutzt
    "skipLibCheck": true,        // entschärft Typschreie in node_modules
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "types": ["react", "react-dom"]  // <-- wichtig, damit VSCode die Typen lädt
  },
  "include": ["src", "vite-env.d.ts"]
}
